<!--Changeset #482: Change the Schedule link in both layouts to the inclueded glyphicon-calendar -->

<!-- On the navigation bar of the user panel, Schedule is changed to the glyphicon-calendar icon -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ScheduleIt</title>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/fullcalendar")

    @Scripts.Render("~/bundles/fullcalendar")


    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)


</head>
<body>
    <asp:Login runat="server" id="myLogin" CssClass="myClass"></asp:Login>
    @if (User.Identity.IsAuthenticated)
    {
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* NAV LOGO *@
                <div id="logo-box">
                    <a href="~/Account/Login"> <img class="" id="nav-logo" src="~/Images/The-Tech-Academy-Logo.png" /></a>
                </div>
                @*END NAV LOGO*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li title="Hours Worked">@Html.ActionLink(" ", "Index", "Home", null, new { @class = "glyphicon glyphicon-home" })</li>
                    <li title="Schedule">@Html.ActionLink(" ", "Index", "Calendar", null, new { @class = "glyphicon glyphicon-calendar" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li title="Request Time Off">@Html.ActionLink(" ", "Index", "TimeOffEvent", null, new { @class = "glyphicon glyphicon-plane" })</li>

                    @Html.Action("messageCount", "Account") <!-- Calls the _MessageCount partial-->
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
        <div class="row-fluid messageNotifications " align="center" id="newMessagesNotification"></div>
    </div>
    }
    else
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @* NAV LOGO *@
                    <div id="logo-box">
                        <a href="~/Account/Login"> <img class="" id="nav-logo" src="~/Images/The-Tech-Academy-Logo.png" /></a>
                    </div>
                    @*END NAV LOGO*@
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        @if (User.IsInRole("Admin"))
                        {

                            @Html.ActionLink("Admin", "Index", "Admin")

                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
                

            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
    </div>

    <div id="fixed-footer">
        <hr />
        <footer class="text-center">
            <p>ScheduleIt - &copy; @DateTime.Now.Year</p>
        </footer>
    </div>


</body>

</html>

